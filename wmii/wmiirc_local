MODKEY=Mod4

#text bg border
WMII_FOCUSCOLORS='#000000 #99ff77 #99ff77'
WMII_BACKGROUND='#222222'
WMII_NORMCOLORS='#aaaaaa #222222 #555555'

WMII_FONT='-windows-proggysquare-medium-r-normal--11-80-96-96-c-70-iso8859-1'

WMII_TERM="urxvt"


wmiir write /ctl <<!
	font $WMII_FONT
	focuscolors $WMII_FOCUSCOLORS
	normcolors $WMII_NORMCOLORS
	grabmod $MODKEY
	border 0
        bar on top
!